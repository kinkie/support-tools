[alias]
	st = status -s -uno
	co = checkout
	vacuum = clean -fdx
	amend = commit --amend
	ci = commit
	rem = remote -v
	sl = log --oneline --graph
	changed-files = "!f() { git diff --name-only \"${1:-origin/master}^\" --diff-filter=dxu ; }; f"
	squid-format = "!f() { ./scripts/formater.pl $(git changed-files $1) ; }; f"

[remote "origin"]
